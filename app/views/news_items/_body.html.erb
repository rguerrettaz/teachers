<% if item.format == 'photo' %>
  <%= link_to image_tag(item.photo_urls), item.source_url %>

<% elsif item.format == 'answer' %>
  <div class='question'>
    <%= item.question.html_safe %>
    <p><%= link_to item.asking_name, item.asking_url %></p>
  </div>
  <div class='answer'>
    <%= item.answer.html_safe %>
    <p><%= link_to item.source_user, item.source_user_url %></p>
  </div>
  
<% end %>

<%= item.title if item.title %>

<%= truncate_html(item.body.html_safe, :length => max_post_length, :omission => '...') if item.body %>

<div class='caption'>
  <% if item.source == 'reddit' %>
    <%= link_to item.caption, item.source_url %>
  <% end %>

  <%= truncate_html(item.caption.html_safe, :length => max_post_length, :omission => '...') if item.caption && item.source != 'reddit' %>
</div>

<% if item.body && item.body.length > max_post_length %>
    <%= render 'read_more', :item => item %>
<% end %>
