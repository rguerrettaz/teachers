  <div class='row-fluid'>
    <article class="news_item <%= @news_item.source%> <%= @news_item.format%> single_news span8">
      <%= render 'news_items', :item => @news_item %>
    </article>
  </div>
  
    <div class='row-fluid'>
      <% if logged_in? %>
        <%= render "news_items/form", :news_item => @news_item %>
      <% else %>
       <p><%= link_to 'Login', new_session_path %> or <%= link_to 'Sign-up', new_user_path %>  to comment</p>
      <% end %>
    </div>

  <div class='row-fluid'><div class='comments span8'></div></div>

    <div class='row-fluid'>
      <div class='span8'>
      
        <% if @news_item.comments.count > 0 %>
            <div class='row-fluid'>
          <% @news_item.comments.each_with_index do |comment, count| %>
            <% unless comment.id.nil? %>

                <% if count%2 == 0 && count != 0 %>
                  </div>
                  <div class='row-fluid'>
                <% end %>

                <div class='span6 comment'><%= render "news_items/comments", :comment => comment %></div>

            <% end %>
          <% end %>
            </div>
        <% end %>
      </div>
    </div>

