<h3>Sign Up</h3>

<%= form_tag(signup_path) do %>
  <%= text_field_tag(:username, nil, :placeholder => "Username") %>
  <%= email_field_tag(:email, nil, :placeholder => "Email") %>
  <%= password_field_tag(:password, nil, :placeholder => "Password") %>

  <%= submit_tag("Sign Up!", :class => 'btn') %>
<% end %>
